#!/usr/bin/env bash
cd ~/.config/eww

icons=("" "" "")
XDG_CACHE_HOME="$HOME/.cache"
date="$XDG_CACHE_HOME/eww/osd_brightness.date"
lock=0

showhide() {
  rundate=$(cat "$date" 2>/dev/null || echo 0)
  currentdate=$(date +%s)

  if [ "$rundate" = "$currentdate" ] && [ "$lock" -eq 0 ]; then
    scripts/toggle-osd-bright.sh --open
    lock=1
  elif [ $((currentdate - rundate)) -ge 2 ] && [ "$lock" -eq 1 ]; then
    scripts/toggle-osd-bright.sh --close > /dev/null
    lock=0
  fi
}

osd() {
  if [ ! -f "$date" ]; then
    mkdir -p "$XDG_CACHE_HOME/eww"
  fi
  date +%s > "$date"
}

osd_handler() {
  lock=0
  rundate=0
  if [ ! -f "$date" ]; then
    mkdir -p "$XDG_CACHE_HOME/eww"
    echo 0 > "$date"
  fi

  while true; do
    showhide
    sleep 0.1
  done
}

if [ "$1" = "osd" ]; then
  osd
else
  # finding
  DEVICE=$(brightnessctl --list | grep backlight | awk '{print $2}' | head -n 1 | tr -d "'")
  if [ -z "$DEVICE" ]; then
    # didn't find any, return the default
    echo "{\"level\": 0, \"icon\": \"${icons[0]}\"}"
    exit 0
  fi

  level=$(brightnessctl -d "$DEVICE" get 2>/dev/null || echo 0)
  max=$(brightnessctl -d "$DEVICE" max 2>/dev/null || echo 100)
  if [ "$max" -eq 0 ]; then
    max=100
  fi
  percentage=$(awk -v l="$level" -v m="$max" 'BEGIN {print int((l/m)*100)}')
  if [ -z "$percentage" ]; then
    percentage=0
  fi
  icon=${icons[$(awk -v n="$percentage" 'BEGIN{print int(n/34)}')]}
  echo "{\"level\": $percentage, \"icon\": \"$icon\"}"

  osd_handler &
  udevadm monitor | rg --line-buffered "backlight" | while read -r _; do
    level=$(brightnessctl -d "$DEVICE" get 2>/dev/null || echo 0)
    max=$(brightnessctl -d "$DEVICE" max 2>/dev/null || echo 100)
    if [ "$max" -eq 0 ]; then
      max=100
    fi
    percentage=$(awk -v l="$level" -v m="$max" 'BEGIN {print int((l/m)*100)}')
    if [ -z "$percentage" ]; then
      percentage=0
    fi
    icon=${icons[$(awk -v n="$percentage" 'BEGIN{print int(n/34)}')]}
    echo "{\"level\": $percentage, \"icon\": \"$icon\"}"
  done
fi