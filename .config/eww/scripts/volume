#!/usr/bin/env bash
# export LANG=en_US.UTF-8
# export LC_ALL=en_US.UTF-8
cd ~/.config/eww

# volicons=("" "" "" "") # add more icons
volicons=("O" "!" "-" "-")
XDG_CACHE_HOME="$HOME/.cache"
date="$XDG_CACHE_HOME/eww/osd_vol.date"
lock=0

showhide() {
  rundate=$(cat "$date")
  currentdate=$(date +%s)

  if [ "$rundate" = "$currentdate" ] && [ "$lock" -eq 0 ]; then
    scripts/toggle-osd-vol.sh --open
    lock=1
  elif [ $((currentdate - rundate)) -ge 2 ] && [ "$lock" -eq 1 ]; then
    scripts/toggle-osd-vol.sh --close > /dev/null
    lock=0
  fi
}

osd() {
  if [ ! -f "$date" ]; then
    mkdir -p "$XDG_CACHE_HOME/eww"
  fi
  date +%s > "$date"
  showhide
}

osd_handler() {
  lock=0
  rundate=0
  if [ ! -f "$date" ]; then
    mkdir -p "$XDG_CACHE_HOME/eww"
    echo 0 > "$date"
  fi

  while true; do
    showhide
    sleep 0.1
  done
}

vol() {
  local vol=$(wpctl get-volume @DEFAULT_AUDIO_$1@ | awk '{print int($2*100)}')
  if [ "$vol" -lt 0 ]; then
    vol=0
  fi
  echo "$vol"
}

ismuted() {
  wpctl get-volume @DEFAULT_AUDIO_"$1"@ | rg -i muted
  echo $?
}

setvol() {
  wpctl set-volume @DEFAULT_AUDIO_"$1"@ "$(awk -v n="$2" 'BEGIN{print (n / 100)}')"
}

setmute() {
  wpctl set-mute @DEFAULT_AUDIO_"$1"@ toggle
}

friendly_device_name() {
  case "$1" in
    *headphone*|*Headphones*|*headphones*) echo "Headphones" ;;
    *speaker*|*Speakers*|*speakers*) echo "Speakers" ;;
    *hdmi*|*HDMI*) echo "HDMI" ;;
    *bluetooth*|*Bluetooth*) echo "Bluetooth" ;;
    *lineout*|*LineOut*) echo "Line Out" ;;
    *) echo "Unknown" ;;
  esac
}

if [ "$1" = "--once" ]; then
  lvl=$(awk -v n="$(vol "SINK")" 'BEGIN{print int(n/51)}') # for 153%
  ismuted=$(ismuted "SINK")
  raw_device=$(pactl --format=json list | gojq -r '.["sinks"][0]["active_port"]' | sed 's/\[Out] //g' | tail -1)
  device=$(friendly_device_name "$raw_device")
  # device=$(pactl --format=json list | gojq -r '.["sinks"][0]["active_port"]' | sed 's/\[Out] //g')
  # device=$(echo "$device" | tail -1)

  if [ "$lvl" -gt 3 ]; then
    lvl=3
  elif [ "$lvl" -lt 0 ]; then
    lvl=0
  fi

  if [ "$ismuted" = 1 ]; then
    icon="${volicons[$lvl]}"
  else
    icon=""
  fi

  audio=1
  if [ "$(wpctl status | grep 'MUTED')" == "" ]; then
    audio=1
  else
    audio=0
  fi

  echo '{ "icon":"'"$icon"'", "audio":"'"$audio"'", "device":"'"$device"'", "percent":'"$(vol "SINK")"', "microphone":'"$(vol "SOURCE")"' }'
  exit 0
fi

if [ "$1" = "mute" ]; then
  if [ "$2" != "SOURCE" ] && [ "$2" != "SINK" ]; then
    echo "Can only mute SINK or SOURCE"; exit 1
  fi
  setmute "$2"
elif [ "$1" = "setvol" ]; then
  if [ "$2" != "SOURCE" ] && [ "$2" != "SINK" ]; then
    echo "Can only set volume for SINK or SOURCE"; exit 1
  elif [ "$3" -lt 1 ] || [ "$3" -gt 153 ]; then
    echo "Volume must be between 1 and 153"; exit 1
  fi
  setvol "$2" "$3"
elif [ "$1" = "osd" ]; then
  osd
else
  lvl=$(awk -v n="$(vol "SINK")" 'BEGIN{print int(n/51)}')
  ismuted=$(ismuted "SINK")
  raw_device=$(pactl --format=json list | gojq -r '.["sinks"][0]["active_port"]' | sed 's/\[Out] //g' | tail -1)
  device=$(friendly_device_name "$raw_device")
  # device=$(pactl --format=json list | gojq -r '.["sinks"][0]["active_port"]' | sed 's/\[Out] //g')
  # device=$(echo "$device" | tail -1)


  if [ "$lvl" -gt 3 ]; then
    lvl=3
  elif [ "$lvl" -lt 0 ]; then
    lvl=0
  fi

  if [ "$ismuted" = 1 ]; then
    icon="${volicons[$lvl]}"
  else
    icon=""
  fi

  audio=1
  if [ "$(wpctl status | grep 'MUTED')" == "" ]; then
    audio=1
  else
    audio=0
  fi

  echo '{ "icon":"'"$icon"'", "audio":"'"$audio"'", "device":"'"$device"'", "percent": '"$(vol "SINK")"', "microphone": '"$(vol "SOURCE")"' }'
  # it stop in here, idk why 

  osd_handler &
  pactl subscribe | rg --line-buffered "on sink" | while read -r _; do
    lvl=$(awk -v n="$(vol "SINK")" 'BEGIN{print int(n/51)}')
    ismuted=$(ismuted "SINK")
    raw_device=$(pactl --format=json list | gojq -r '.["sinks"][0]["active_port"]' | sed 's/\[Out] //g' | tail -1)
    device=$(friendly_device_name "$raw_device")
    # device=$(pactl --format=json list | gojq -r '.["sinks"][0]["active_port"]' | sed 's/\[Out] //g')
    # device=$(echo "$device" | tail -1)


    if [ "$lvl" -gt 3 ]; then
      lvl=3
    elif [ "$lvl" -lt 0 ]; then
      lvl=0
    fi

    if [ "$ismuted" = 1 ]; then
      icon="${volicons[$lvl]}"
    else
      icon=""
    fi

    audio=1
    if [ "$(wpctl status | grep 'MUTED')" == "" ]; then
      audio=1
    else
      audio=0
    fi
    # printf '{"icon":"%s", "audio":"%s", "device":"%s", "percent":%d, "microphone":%d}\n' "$icon" "$audio" "$device" "$(vol "SINK")" "$(vol "SOURCE")"
    echo '{"icon":"'"$icon"'","audio":"'"$audio"'","device":"'"$device"'","percent":"'"$(vol "SINK")"'","microphone":"'"$(vol "SOURCE")"'"}'
  done
fi